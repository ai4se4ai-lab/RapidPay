          "REVIEW",
          "REVISIT",
          "PERF",
          "OPTIMIZE"
        ],
        "implicit": [
          "callback hell",
          "spaghetti code",
          "nested callbacks",
          "ugly solution",
          "not ideal",
          "disable eslint",
          "console.log",
          "hard coded"
        ]
      },
      "typescript": {
        "explicit": [
          "REVIEW",
          "REVISIT",
          "PERF",
          "OPTIMIZE"
        ],
        "implicit": [
          "as any",
          "disable type check",
          "ts-ignore",
          "ts-nocheck",
          "type assertion",
          "needs better typing"
        ]
      },
      "python": {
        "explicit": [
