{
    "customPatterns": [
      "needs review",
      "placeholder",
      "refine later",
      "not ideal",
      "incomplete implementation",
      "revisit this",
      "simplistic approach",
      "needs optimization"
    ],
    "excludePatterns": [
      "test/",
      "spec/",
      "vendor/",
      "node_modules/",
      "dist/",
      "build/"
    ],
    "languages": {
