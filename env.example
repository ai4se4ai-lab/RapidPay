# RapidPay Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for LLM-based SATD classification)
OPENAI_API_KEY=your_openai_api_key_here

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=rapidpay123

# SATD Detection Configuration
# Confidence threshold τ for LLM classification (0-1)
SATD_CONFIDENCE_THRESHOLD=0.7

# Maximum hop count k for dependency analysis
MAX_DEPENDENCY_HOPS=5

# SIR Weight Configuration (α, β, γ)
SIR_ALPHA=0.4
SIR_BETA=0.3
SIR_GAMMA=0.3

# CAIG Weight Configuration (η1, η2, η3, η4)
CAIG_ETA1=0.4
CAIG_ETA2=0.3
CAIG_ETA3=0.15
CAIG_ETA4=0.15

# Commit Window Size for CAIG
COMMIT_WINDOW_SIZE=50

# Effort Score Lambda
EFFORT_LAMBDA=0.5

